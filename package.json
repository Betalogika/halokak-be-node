{
    "name": "halokak-be-node",
    "version": "1.0.0",
    "description": "Serverless API for Halo Kak App",
    "main": "index.js",
    "scripts": {
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "local": "serverless offline",
        "deploy:dev": "serverless deploy --stage dev",
        "deploy:prod": "serverless deploy --stage prod",
        "deploy:all": "serverless deploy --stage dev && serverless deploy --stage prod",
        "test": "cross-env NODE_ENV=dev mocha -r ts-node/register tests/*.test.ts --exit",
        "coverage": "nyc --reporter lcov npm run test"
    },
    "pre-commit": [
        "lint"
    ],
    "dependencies": {
        "@sigodenjs/apitest": "^0.11.0",
        "aws-sdk": "^2.893.0",
        "axios": "^0.21.1",
        "bcryptjs": "^2.4.3",
        "dotenv": "^8.2.0",
        "moment": "^2.29.1",
        "mongoose": "^5.9.10",
        "mysql": "^2.18.1",
        "objection": "^3.0.1",
        "serverless-plugin-ifelse": "^1.0.7"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.51",
        "@types/chai": "^4.2.11",
        "@types/dotenv-safe": "^8.1.0",
        "@types/lambda-tester": "^3.6.0",
        "@types/mocha": "^7.0.2",
        "@types/mongoose": "^5.7.14",
        "@types/sinon": "^9.0.0",
        "@types/supertest": "^2.0.8",
        "chai": "^4.2.0",
        "cross-env": "^7.0.2",
        "istanbul": "^0.4.5",
        "lambda-tester": "^4.0.1",
        "mocha": "^7.1.2",
        "nyc": "^15.0.1",
        "serverless-offline": "^12.0.2",
        "serverless-offline-scheduler": "^0.5.0",
        "serverless-plugin-typescript": "^2.1.4",
        "sinon": "^9.0.2",
        "ts-node": "^8.9.1",
        "tslint": "^6.1.3",
        "tslint-config-airbnb": "^5.11.2",
        "typescript": "^3.8.3"
    },
    "keywords": [
        "Nodejs",
        "TypeScript",
        "ServerLess",
        "MongoDB Atlas",
        "AWS Lambda"
    ]
}
